#!/usr/bin/env bash
# Configures Nginx to serve a custom 404 page with the text "Ceci n'est pas une page"

# Install Nginx if not installed
sudo apt-get update -y
sudo apt-get install -y nginx

# Create custom 404 page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# Update default Nginx site configuration to use custom 404 page
sudo sed -i '/server_name _;/a \\terror_page 404 /404.html;' /etc/nginx/sites-available/default

# Reload Nginx to apply changes
sudo systemctl restart nginx

