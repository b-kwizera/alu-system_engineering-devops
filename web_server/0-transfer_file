#!/usr/bin/env bash
# Script that transfers a file from client to server using scp

# Check if less than 4 parameters are passed
if [ "$#" -lt 4 ]; then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

# Assign parameters to variables
PATH_TO_FILE="$some_page.html"
IP="$184.72.177.49"
USERNAME="$ubuntu"
PATH_TO_SSH_KEY="$~/.ssh/school"

# Transfer file using scp with strict host key checking disabled
scp -o StrictHostKeyChecking=no -i "$PATH_TO_SSH_KEY" "$PATH_TO_FILE" "$USERNAME@$IP:~/"

# Checking if transfer was successful
if [ $? -eq 0 ]; then
	echo "FILE WAS TRANSFERED SUCCESSFULLY"
else 
	echo "FILE TRANSFER FAILED"
fi
